{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}Panier
{% endblock %}

{% block body %}
	<div class="header-title color-fond2 font-title">
		<h1>Panier</h1>
	</div>

	<section class="flex flex-col items-center p-4 overflow-hidden">
    {% for detail in detailsPanier %}
        <div class="flex flex-col gap-4 w-full max-w-[900px] p-6 border-b border-gray-300 md:flex-row md:gap-8 md:items-start">
           
            <div class="w-full max-w-[200px] h-[200px] mx-auto md:mx-0">
                <img src="/{{ detail.produit.image|e('html_attr')}}" alt="" class="w-full h-full object-cover rounded-lg shadow-md"/>
            </div>

            
            <div class="text-center md:text-left md:flex-1">
                <a href="{{ path('app_produit', {'id': detail.produit.id}) }}" class="text-black no-underline hover:text-gray-600 transition-colors duration-200">
                    <h1 class="font-title text-2xl mb-2 md:text-[1.75rem]">{{ detail.produit.libelleCourt|e('html_attr') }}</h1>
                </a>
                <p class="text-gray-600 text-[0.95rem] max-w-[600px] mx-auto md:mx-0 md:mt-0">
                    {{ detail.produit.libelleLong|e('html_attr') }}
                </p>
            </div>

           
             <div class="flex flex-col items-center gap-4 md:items-start md:flex-1">
                <div class="text-center">
                    <form method="POST" action="" class="panier-card-produit-formdel">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <input type="hidden" name="produit_id" value="{{ detail.produit.id|e('html_attr') }}">
                        <input type="hidden" name="action" value="supprimer">
                        <button type="submit" class="bg-gray-50 border border-gray-300 rounded-lg py-2 px-4 flex flex-col items-center cursor-pointer transition-all duration-200 hover:text-red-500 hover:border-red-400 hover:shadow-sm">
                            <p class="font-title text-[0.9rem] my-1">Supprimer le produit</p>
                            <img src="/image/logo/interface/delete.svg" alt="" class="w-[30px] h-[30px]"/>
                        </button>
                    </form>
                </div>
            
                <div class="text-center md:text-left">
                    <div class="flex justify-center items-center md:justify-start">
                        <span class="font-bold">Quantité :</span>
                        <form action="" method="post" class="quantite-form ml-1">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <input type="hidden" name="produit_id" value="{{ detail.produit.id|e('html_attr') }}">
                            <input type="hidden" name="action" value="modifier">
                            <div class="flex items-center gap-2">
                                <input type="number" name="quantite" class="w-[60px] p-1 border border-gray-300 rounded-full text-center text-[12pt] bg-gray-50 shadow-inner focus:border-green-500 focus:ring-1 focus:ring-green-500 focus:bg-white transition-all" 
                                       value="{{ detail.quantite|e('html_attr') }}" min="1" max="10"/>
                                <button type="submit" class="bg-green-600 border-none p-1 rounded flex items-center justify-center hover:bg-green-700 transition-colors duration-200 cursor-pointer">
                                    <img src="/image/logo/interface/check.svg" alt="Modifier" title="Modifier la quantité" class="w-5 h-5 invert brightness-0"/>
                                </button>
                            </div>
                        </form>
                    </div>

                    {% if detail.produit.promotion is not null and detail.produit.promotion > 0 %}
                        <p class="text-[0.9rem] my-1">Prix sans promotion TTC Unitaire: {{ detail.prixBase|number_format(2, ',', ' ') }}€</p>
                    {% endif %}
                    <p class="text-[0.9rem] my-1">Prix TTC Unitaire : {{ detail.prixTTC|number_format(2, ',', ' ') }}€</p>
                    <p class="text-[0.9rem] my-1">Prix Total TTC : {{ detail.sousTotal|number_format(2, ',', ' ') }}€</p>
                </div>
            </div>
        </div>
			  <hr class="block w-[60%] h-[0.7px] mx-auto my-[10px] border-none bg-[rgba(46,46,46,0.7)]" />

    {% else %}
        <h1 class="color-erreur-text">Erreur dans le chargement du panier</h1>
    {% endfor %}

    <div class="mt-12 text-center">
        <p><strong>Nombre d'articles :</strong> {{ nombreArticles ?? 0 }}</p>
        <p><strong>Total du panier TTC:</strong> {{ totalPanier ?? 0 }}€</p>
    </div>

    <a href="{{ path('app_paiement') }}" class="mt-5 py-1 px-10 bg-green-600 text-white no-underline rounded-full shadow-md text-[13pt] text-center transition-all hover:shadow-lg">
        Valider la commande
    </a>
</section>{% endblock %}
