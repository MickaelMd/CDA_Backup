{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}Inscription
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('form-inscription-react') }}
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="header-title color-fond2 font-title">

		<h1>
			Inscription
		</h1>
	</div>

	{% for error in registrationForm.email.vars.errors %}
		<div class="form-errorr">{{ error.message }}</div>
	{% endfor %}

	<div id="form-inscription-react" data-csrf-token="{{ csrf_token('registration_form') }}"></div>

{% endblock %}
