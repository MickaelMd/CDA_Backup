{% extends 'base.html.twig' %}


{% block title %}
	{{ parent() }}Réinitialiser votre mot de passe

{% endblock %}

{% block body %}

	<div class="header-title color-fond2 font-title">
		<h1>
			Réinitialiser votre mot de passe
		</h1>
	</div>

	<section class="flex flex-col justify-center items-center text-center">

		{{ form_start(requestForm) }}

		<label for="" class="font-title">Email</label>
		{{ form_row(requestForm.email, {
        'label': false,
        'attr': {'class': 'app-input mt-[10px]'}}) }}

		<div>
			<small>
				Saisissez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
			</small>
		</div>
		<div class="mt-[20px]">
			<button class="app-button color-btnCta">Envoyer un e-mail de réinitialisation du mot de passe</button>
		</div>
		{{ form_end(requestForm) }}</section>
{% endblock %}
