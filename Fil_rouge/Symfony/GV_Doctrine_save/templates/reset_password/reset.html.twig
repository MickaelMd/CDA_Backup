{% extends 'base.html.twig' %}


{% block title %}
	{{ parent() }}Réinitialiser votre mot de passe

{% endblock %}

{% block body %}
	<div class="header-title color-fond2 font-title">
		<h1>
			Réinitialiser votre mot de passe
		</h1>
	</div>

	<section class="reset-pass-page-section flex flex-col justify-center items-center text-center">

		{{ form_start(resetForm) }}
		<label for="change_password_form[plainPassword][first]">Nouveau mot de passe</label>
		{{ form_row(resetForm.plainPassword.first, {
    'label': false,
    'attr': {'class': 'app-input mt-[10px]'}
}) }}
		<label for="change_password_form[plainPassword][second]">Confirmer le mot de passe</label>
		{{ form_row(resetForm.plainPassword.second, {
    'label': false,
    'attr': {'class': 'app-input mt-[10px]'}
}) }}
		<div class="mt-[20px]">
			<button class="app-button color-btnCta">Réinitialiser le mot de passe</button>
		</div>
		{{ form_end(resetForm) }}
	</section>
{% endblock %}
