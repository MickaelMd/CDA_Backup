{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}Panier
{% endblock %}

{% block page_specific_stylesheets %}
	{{ encore_entry_link_tags('panier-style') }}
{% endblock %}

{% block body %}
	<div class="header-title color-fond2 font-title">
		<h1>Panier</h1>
	</div>

	<section class="section_panier_produit">

		{% for detail in detailsPanier %}

			<div class="panier_card_produit">

				<div class="panier_card_produit_img">
					<img src="/{{ detail.produit.image}}" alt=""/>
				</div>

				<div class="panier_card_produit_info">
					<h1 class="font-title">{{ detail.produit.libelleCourt }}</h1>
					<p>
						{{ detail.produit.libelleLong }}
					</p>
				</div>


				<div class="panier_card_produit_div_del_quant">
					<div class="panier_card_produit_formdel">
						<form method="POST" action="">

							<button type="submit">
								<p class="font-title">Supprimer le produit</p>
								<img src="/image/logo/interface/delete.svg" alt=""/>
							</button>
						</form>
					</div>
					<div class="panier_card_produit_quantite">
						<span>Quantité :
						</span>
						<input type="number" name="quantite" class="produit_number" value="{{ detail.quantite }}" min="1" max="10"/>
						<p>Prix TTC Unitaire :
							{{ detail.prixTTC|number_format(2, ',', ' ') }}€</p>
						<p>Prix Total TTC :
							{{ detail.sousTotal|number_format(2, ',', ' ') }}€</p>
					</div>
				</div>
			</div>
		{% endfor %}

		<div class="panier_total">
			<p>
				<strong>Nombre d'articles :</strong>
				{{ nombreArticles ?? 0 }}</p>
			<p>
				<strong>Total du panier TTC:</strong>
				{{ totalPanier ?? 0 }}€</p>

		</div>
		<a class="panier_commande_btn" href="#">Valider la commande</a>
	</section>
{% endblock %}
